@model HomeBudget.WebApp.Models.PaymentDetailsModel

@{
    ViewData["Title"] = "Details";
}
@section Style{
    <link rel="stylesheet" href="~/css/details.css" />
}
<h1>Payment Details</h1>
<hr />

<div class="payment-details">
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipientNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipientNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.Purpose)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.Purpose)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.ReferenceNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.ReferenceNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.Amount)
        </dd>
    </dl>
    <div class="details-categories">
        @if (Model.Payment.Categories == null || Model.Payment.Categories.Count == 0)
        {
            <h3>This payment has no categories</h3>
        }
        else
        {
            <h3>Categories:</h3>
            foreach (var c in Model.Payment.Categories)
            {
                foreach (var category in Model.Categories)
                {
                    if (c.CategoryID == category.CategoryID)
                    {
                        <h4>@category.Name</h4>
                    }
                }

            }
        }
    </div>
</div>



