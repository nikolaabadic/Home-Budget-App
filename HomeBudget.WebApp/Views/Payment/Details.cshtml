@model HomeBudget.WebApp.Models.PaymentDetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.PaymentID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.PaymentID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.AccountID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.AccountID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.RecipientID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.RecipientID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.Purpose)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.Purpose)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.ReferenceNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.ReferenceNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.Amount)
        </dd>
    </dl>
</div>

<div>
    @if (Model.Payment.Categories == null || Model.Payment.Categories.Count == 0)
    {
        <h3>This payment has no categories</h3>
    }
    else
    {
        <h3>Categories</h3>
        foreach (var c in Model.Payment.Categories)
        {
            foreach (var category in Model.Categories)
            {
                if (c.CategoryID == category.CategoryID)
                {
                    <h4>@category.Name</h4>
                }
            }

        }
    }
</div>

